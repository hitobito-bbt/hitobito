- title t('mails.show')

%h2= @mail.subject

%p UID: #{@mail.uid}
%p From: #{@mail.sender}

#main.row-fluid
  %article.span9
    %p= @mail.body

  %aside.span2.offset1
    = action_button @mailboxes[:INBOX], {action: catch_all_index_path(uid: @mail.uid, mailbox: @mail.mailbox), method: :put }, nil, class: 'active', method: :put
    = action_button @mailboxes[:FAILED], catch_all_index_path
    = action_button @mailboxes[:SPAMMING], catch_all_index_path
