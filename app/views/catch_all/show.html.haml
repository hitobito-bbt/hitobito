- title t('mails.show')

%h2= @mail.subject

%p UID: #{@mail.uid}
%p From: #{@mail.sender}

#main.row-fluid
  %article.span9
    %p= @mail.body

  %aside.span2.offset1
    = action_button @mailboxes[:INBOX], catch_all_move_mail_path(catch_all_id: @mail.uid, mailbox: @mail.mailbox), nil, class: 'active'
