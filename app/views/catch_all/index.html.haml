- title t('mails.manage')


= section_table('Inbox', @mails[:inbox_mails]) do |m|

  %td
    = link_to m.subject, mailbox_show_mail_path(mailbox_id: m.mailbox, uid: m.uid)
  %td
    = m.sender
  %td
    = m.date
  %td
    = link_to icon(:'trash-alt', filled: false),
            mailbox_show_mail_path(mailbox_id: m.mailbox, uid: m.uid),
            class: 'action',
            title: ti(:"link.delete"),
            alt: ti(:"link.delete"),
            data: { confirm: ti(:confirm_delete),
                    method: :delete,
                   }

%h2 Spam
%ul
- @mails[:spam_mails].each do |m|
  %li
    - subject = m.subject
    = link_to subject, mailbox_show_mail_path(mailbox_id: m.mailbox, uid: m.uid)


%h2 Failed
%ul
- @mails[:failed_mails].each do |m|
  %li
    - subject = m.subject
    = link_to subject, mailbox_show_mail_path(mailbox_id: m.mailbox, uid: m.uid)
