- title t('mails.show')

%h2 #{@mail.subject}
%p UID: #{@mail.uid}
%p From: #{@mail.sender}
%p Body: #{@mail.body}

= form_with url: mail_path(uid: @mail.uid, mailbox: @mail.mailbox),  method: :put do |form|
  = form.collection_select :move_to, @mailboxes, :id, :name, selected: params[:mailbox]
  = hidden_field_tag :mailbox, params[:mailbox]
  = form.submit "Move to"


= link_to icon(:'trash-alt', filled: false),
            mail_path(uid: params[:uid], mailbox: params[:mailbox]),
            class: 'action',
            title: ti(:"link.delete"),
            alt: ti(:"link.delete"),
            data: { confirm: ti(:confirm_delete),
                    method: :delete,
                   }
